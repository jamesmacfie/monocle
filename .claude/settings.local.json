{
  "permissions": {
    "allow": [
      "Bash(mkdir:*)",
      "Bash(find:*)",
      "Bash(npm run:*)",
      "WebSearch",
      "Bash(npx tsc:*)",
      "Bash(grep:*)",
      "Bash(cat:*)",
      "WebFetch(domain:extension.js.org)"
    ],
    "deny": [],
    "ask": []
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "npm run fmt"
          },
          {
            "type": "command",
            "command": "npm run tsc"
          }
        ]
      }
    ]
  }
}