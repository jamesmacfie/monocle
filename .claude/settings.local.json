{
  "permissions": {
    "allow": ["Bash(rm:*)", "Bash(mkdir:*)", "Bash(mv:*)"],
    "deny": [],
    "ask": []
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "npm run fmt"
          }
        ]
      }
    ]
  }
}
