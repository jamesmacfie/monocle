{
  "permissions": {
    "allow": [
      "Bash(rm:*)",
      "Bash(mkdir:*)",
      "Bash(mv:*)",
      "Bash(yarn tsc:*)",
      "Bash(find:*)",
      "Bash(npm run build:*)"
    ],
    "deny": [],
    "ask": []
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "npm run fmt"
          }
        ]
      }
    ]
  }
}
