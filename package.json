{
  "name": "monocle",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "main": "index.js",
  "directories": {
    "example": "examples"
  },
  "paths": {
    "@/*": [
      "./content/*"
    ]
  },
  "scripts": {
    "dev": "extension dev .",
    "dev:firefox": "extension dev . --browser=firefox",
    "build": "extension build .",
    "build:firefox": "extension build . --browser=firefox",
    "build:zip": "extension build --zip .",
    "preview": "extension preview .",
    "test": "echo \"Error: no test specified\" && exit 1",
    "tsc": "tsc --noEmit",
    "fmt": "biome check --write --unsafe",
    "fmt:check": "biome check"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "description": "A browser extension that adds a command palette interface to any webpage",
  "dependencies": {
    "@radix-ui/react-popover": "^1.1.11",
    "@reduxjs/toolkit": "^2.9.0",
    "clsx": "^2.1.1",
    "cmdk": "^1.1.1",
    "lucide-react": "^0.507.0",
    "react": "^18.1.0",
    "react-dom": "^18.1.0",
    "react-redux": "^9.2.0",
    "ts-pattern": "^5.8.0",
    "usehooks-ts": "^3.1.1",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.2",
    "@tailwindcss/postcss": "^4.1.3",
    "@types/react": "^18.0.9",
    "@types/react-dom": "^18.0.5",
    "@types/webpack-env": "^1.18.8",
    "extension": "^2.0.4",
    "tailwindcss": "^4.1.3",
    "typescript": "5.3.3"
  }
}
